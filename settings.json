{
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings":[
        // CamelCaseMotion用の設定
        {
            "before": ["w"],
            "after": ["leader","w"]
        },
        {
            "before": ["e"],
            "after": ["leader","e"]
        },
        {
            "before": ["b"],
            "after": ["leader","b"]
        },
        // S-yを行末までのヤンクにする
        {
            "before": ["Y"],
            "after" : ["y", "$"]
        }
    ],
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.camelCaseMotion.enable": true,
    "workbench.colorTheme": "Quiet Light",
    "editor.scrollBeyondLastLine": false,
    "editor.lineNumbers": "relative",
    "editor.fontFamily": "'Mylica M',Menlo, Monaco, 'Courier New', monospace",
}