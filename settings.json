{
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings":[
        {
            "before": ["n"],
            "after": ["n","z","z"]
        },
        {
            "before": ["N"],
            "after": ["N","z","z"]
        },
        // CamelCaseMotion用の設定
        {
            "before": ["w"],
            "after": ["leader","w"]
        },
        {
            "before": ["e"],
            "after": ["leader","e"]
        },
        {
            "before": ["b"],
            "after": ["leader","b"]
        }
    ],
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.camelCaseMotion.enable": true,
    "workbench.colorTheme": "Quiet Light",
    "editor.scrollBeyondLastLine": false,
}